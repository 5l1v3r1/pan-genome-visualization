    title panX
  body
    include navbar
    .container
      .row
        br
        br
        br
        #logo.col-md-2
          img(src='images/pan-blue-noReads.svg', style='width:230;height:209px;')
          .col-md-2
        #dc-data-count.col-md-2
          .alert.alert-info(role='alert') Species
          #species-selector
          .dc-data-count
        #dc-straincount-chart.col-md-3
          .alert.alert-info(role='alert') Gene count rank distribution 
        #dc-geneLength-chart.col-md-3
          .alert.alert-info(role='alert') Gene length distribution
        .col-md-2
          .alert.alert-info(role='alert') Core/Accessory genes
          #dc-coreAcc-piechart  
          .col-md-4
            span#coreThreshold(data-toggle='tooltip', data-placement='bottom', title='coreThreshold ')
              | cutoff:0.99
          .col-md-6
            #changeCoreThreshold
      .row
        .col-md-6
          .alert.alert-info(role='alert') Gene cluster table
          table#dc-data-table.table.table-striped.table(cellspacing='0', width='100%')
        .col-md-6
          .alert.alert-info(role='alert')
            #sequence_viewer_title Sequence alignment
          #snippetDiv
      #all_trees.row
        .col-md-6
          .alert.alert-info(role='alert')
            | Strain tree (SNPs in all core genes)
          .row
            #LeftTreeButtons.col-md-5(style='vertical-align: top')
              input#TreeViewSelect.btn_tooltip.input(type='checkbox', data-toggle='toggle', data-style='ios', data-on='Circular', data-off='Vertical', data-size='mini', data-onstyle='primary', data-offstyle='info', text='layout')
              input#LabelsToggle.btn_tooltip(type='checkbox', checked='', data-toggle='toggle', data-style='ios', data-on='Label', data-off='Label', data-size='mini')
              input#InnerNodeToggle.btn_tooltip(type='checkbox', checked='', data-toggle='toggle', data-style='ios', data-on='Node', data-off='Node', data-size='mini')
              input#ScalesToggle.btn_tooltip(type='checkbox', checked='', data-toggle='toggle', data-style='ios', data-on='Scale', data-off='Scale', data-size='mini')
              //- input#HeightToggle(type='checkbox', checked='true', data-toggle='toggle', data-style='ios', data-on='H', data-off='H', data-size='mini')
              button#Height_plus_Toggle.btn.btn-xs.btn-primary.btn_tooltip
                span.glyphicon.glyphicon-resize-full
              button#Height_minus_Toggle.btn.btn-xs.btn-primary.btn_tooltip
                span.glyphicon.glyphicon-resize-small
              //- i#Height_plus_Toggle.glyphicon.glyphicon-plus-sign/minus-sign
              //- span#treeLoader
            #tree_zoom_range.col-md-3.btn_tooltip
              input.zoom-range(type='range', min='0.4', max='1', step='0.05')
            #dropdown_list.col-md-3.btn_tooltip
            #download-coreTree.col-md-1.btn_tooltip(data-toggle='tooltip', data-placement='bottom', title='download tree')
          .row
            .col-md-2
              br
              br
              br
              svg#legend
            .col-md-10
              #mytree1
        .col-md-6
          .alert.alert-info(role='alert')
            #genetree_title Gene tree (individual gene)
          .row
            .col-md-4
              #searchStrain-group.input-group
                span#sizing-addon1.input-group-addon.primary.sm-customized Search strain
                input.form-control.sm-customized(type='text', placeholder='NCBI accession number', aria-describedby='sizing-addon1',oninput='search(this.value)')
            #tree-rotate-div.col-md-2
              input#tree-rotate(type='checkbox', data-toggle='toggle', data-style='ios', data-on='left-right', data-off='right-left', data-size='mini', data-onstyle='primary', data-offstyle='info')
            //#dropdown_list2.col-md-4
            #download-geneTree.col-md-1(data-toggle='tooltip', data-placement='bottom', title='download tree ')
          .row
            .col-md-10
              #mytree2            
            .col-md-2
              br
              br
              br
              svg#legend2
      .row
        .col-md-12
          .alert.alert-info(role='alert') Strain meta-info table
          table#dc-data-table2.table.table-striped.table(cellspacing='0', width='100%')
    include footer
    block content
